<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="EstructuralesSoftPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>modelo.CajaChica</class>
    <class>modelo.Cliente</class>
    <class>modelo.Compra</class>
    <class>modelo.Contacto</class>
    <class>modelo.Cuota</class>
    <class>modelo.DetalleCompra</class>
    <class>modelo.Estructurales</class>
    <class>modelo.Maquinas</class>
    <class>modelo.MarcaMaterial</class>
    <class>modelo.Material</class>
    <class>modelo.Medidas</class>
    <class>modelo.MetodoDePago</class>
    <class>modelo.Movimiento</class>
    <class>modelo.Pago</class>
    <class>modelo.PagoDeServicio</class>
    <class>modelo.Pedidos</class>
    <class>modelo.Servicio</class>
    <class>modelo.Stock</class>
    <class>modelo.UnidadDeMedida</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/estructurales?useSSL=false"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
